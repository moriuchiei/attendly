@model AttendanceManagementSystem.Models.LoginInputModel
@{
    Layout = null;
    ViewData["Title"] = "アカウント登録";
}
<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>アカウント新規登録</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <h2>アカウント新規登録</h2>
        <form asp-action="RegisterAccount" asp-controller="Employee" method="post">
            <div class="form-group">
                <label for="email">メールアドレス</label>
                <input type="email" id="email" name="email" placeholder="example@example.com" required>
            </div>

            <div class="form-group">
                <label for="password">パスワード</label>
                <input type="password" id="password" name="password" required>
            </div>

            <div class="form-group">
                <label for="department">所属</label>
                <select id="department" name="department" required>
                    <option value="">選択してください</option>
                    <option value="01">営業部</option>
                    <option value="02">開発部</option>
                    <option value="03">人事部</option>
                    <option value="04">その他</option>
                </select>
            </div>

            <div class="form-group">
                <label for="AdminFlg">ユーザー区分</label>
                <select id="AdminFlg" name="AdminFlg" required>
                    <option value="">選択してください</option>
                    <option value="0">一般ユーザー</option>
                    <option value="1">管理ユーザー</option>
                </select>
            </div>

            <div class="form-group">
                <label for="fullname">氏名</label>
                <input type="text" id="name" name="name" required>
            </div>

            <button type="submit">登録する</button>
        </form>
    </div>
</body>

</html>